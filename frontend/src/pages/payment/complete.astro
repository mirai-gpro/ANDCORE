---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="決済完了">
  <div class="result-page">
    <div class="result-card success">
      <div class="result-icon">&#10003;</div>
      <h1>決済が完了しました</h1>
      <p class="result-message">お支払いが正常に処理されました。</p>
      <p id="order-id" class="order-id"></p>
      <div id="result-details" class="result-details"></div>
      <div class="result-actions">
        <a href="/dashboard" class="btn btn-primary">マイページへ</a>
        <a href="/payment/charge" class="btn btn-secondary">続けてチャージ</a>
      </div>
    </div>
  </div>
</Layout>

<script>
  const params = new URLSearchParams(window.location.search);
  const orderId = params.get('order_id');

  if (orderId) {
    const orderIdEl = document.getElementById('order-id');
    if (orderIdEl) {
      orderIdEl.textContent = `注文ID: ${orderId}`;
    }
  }
</script>

<style>
  .result-page {
    display: flex;
    justify-content: center;
    padding: 3rem 0;
  }

  .result-card {
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius);
    padding: 2.5rem;
    text-align: center;
    max-width: 480px;
    width: 100%;
    box-shadow: var(--shadow);
  }

  .result-icon {
    width: 64px;
    height: 64px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1.5rem;
    font-size: 2rem;
    font-weight: 700;
  }

  .success .result-icon {
    background: #dcfce7;
    color: #166534;
  }

  .result-card h1 {
    font-size: 1.3rem;
    margin-bottom: 0.5rem;
  }

  .result-message {
    color: var(--color-text-muted);
    font-size: 0.9rem;
    margin-bottom: 0.5rem;
  }

  .order-id {
    font-size: 0.8rem;
    color: var(--color-text-muted);
    margin-bottom: 1.5rem;
    font-family: monospace;
  }

  .result-details {
    margin-bottom: 1.5rem;
  }

  .result-actions {
    display: flex;
    gap: 0.75rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn {
    display: inline-block;
    padding: 0.65rem 1.5rem;
    border-radius: var(--radius);
    font-weight: 600;
    font-size: 0.9rem;
    transition: all 0.2s;
    text-decoration: none;
  }

  .btn-primary {
    background: var(--color-primary);
    color: white;
  }

  .btn-primary:hover {
    background: var(--color-primary-dark);
    color: white;
  }

  .btn-secondary {
    background: var(--color-surface);
    color: var(--color-text);
    border: 1px solid var(--color-border);
  }

  .btn-secondary:hover {
    border-color: var(--color-primary);
    color: var(--color-primary);
  }
</style>
