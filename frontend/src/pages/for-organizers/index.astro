<style>
  .portal {
    max-width: 800px;
    margin: 0 auto;
  }

  .portal-header {
    text-align: center;
    margin-bottom: 2.5rem;
  }

  .portal-header h1 {
    font-size: 1.6rem;
    margin-bottom: 0.75rem;
  }

  .portal-lead {
