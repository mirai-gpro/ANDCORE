---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="イベント一覧">
  <div class="events-header">
    <h1>イベント一覧</h1>
    <p>開催中・予定のイベントを確認できます</p>
  </div>

  <div id="events-list" class="events-grid">
    <p class="loading">イベント読み込み中...</p>
  </div>

  <div id="no-events" class="empty-state hidden">
    <p>現在予定されているイベントはありません</p>
  </div>
</Layout>

<script>
  import { supabase } from '../../lib/supabase';

  async function loadEvents() {
    const listEl = document.getElementById('events-list')!;
    const emptyEl = document.getElementById('no-events')!;

    const { data: events, error } = await supabase
      .from('events')
      .select('*')
      .in('status', ['scheduled', 'active'])
      .order('event_date', { ascending: true });

    if (error) {
      listEl.innerHTML = `<p class="error">イベントの取得に失敗しました: ${error.message}</p>`;
      return;
    }

    if (!events || events.length === 0) {
      listEl.innerHTML = '';
      emptyEl.classList.remove('hidden');
      return;
    }

    listEl.innerHTML = events.map(event => `
      <div class="event-card">
        <div class="event-status status-${event.status}">
          ${event.status === 'active' ? '開催中' : '予定'}
        </div>
        <h3>${event.title}</h3>
        <p class="event-meta">
          ${event.event_date ? new Date(event.event_date).toLocaleDateString('ja-JP', {
            year: 'numeric', month: 'long', day: 'numeric', hour: '2-digit', minute: '2-digit'
          }) : '日程未定'}
        </p>
        <p class="event-location">${event.location || '会場未定'}</p>
        ${event.description ? `<p class="event-desc">${event.description}</p>` : ''}
      </div>
    `).join('');
  }

  loadEvents();
</script>

<style>
  .events-header {
    margin-bottom: 2rem;
  }

  .events-header h1 {
    font-size: 1.5rem;
    margin-bottom: 0.25rem;
  }

  .events-header p {
    color: var(--color-text-muted);
    font-size: 0.9rem;
  }

  .events-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 1rem;
  }

  .loading {
    color: var(--color-text-muted);
  }

  .hidden {
    display: none;
  }

  .empty-state {
    text-align: center;
    padding: 3rem;
    color: var(--color-text-muted);
  }

  .error {
    color: #dc2626;
  }
</style>

<style is:global>
  .event-card {
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius);
    padding: 1.5rem;
    box-shadow: var(--shadow);
    position: relative;
  }

  .event-status {
    display: inline-block;
    padding: 0.2rem 0.6rem;
    border-radius: 9999px;
    font-size: 0.7rem;
    font-weight: 600;
    margin-bottom: 0.75rem;
  }

  .status-active {
    background: #dcfce7;
    color: #16a34a;
  }

  .status-scheduled {
    background: #dbeafe;
    color: #2563eb;
  }

  .event-card h3 {
    font-size: 1.1rem;
    margin-bottom: 0.5rem;
  }

  .event-meta {
    font-size: 0.85rem;
    color: var(--color-text-muted);
    margin-bottom: 0.25rem;
  }

  .event-location {
    font-size: 0.85rem;
    color: var(--color-text-muted);
  }

  .event-desc {
    font-size: 0.85rem;
    color: var(--color-text-muted);
    margin-top: 0.5rem;
  }
</style>
